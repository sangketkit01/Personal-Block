{{template "layout" .}}

{{define "title"}}
Home
{{end}}

{{define "css"}}
<style>
    .form-control::placeholder {
        color: gray;
    }

    .like-button {
        color: #fff;
        border: none;
        background: transparent;
        display: flex;
        align-items: center;
        gap: 5px;
        transition: all 0.2s;
    }

    .like-button:hover {
        color: #ff6b6b;
    }

    .like-button.active {
        color: #ff6b6b;
    }

    .card-footer {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .likes-count {
        font-size: 14px;
    }

    .post-time {
        color: #999 !important;
        font-size: 14px;
        font-weight: normal;
    }

    /* Comment system styles */
    .comments-section {
        margin-top: 15px;
        padding: 0 20px 20px 20px;
    }

    .comments-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 15px;
        padding-bottom: 10px;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }

    .comments-count {
        font-weight: 500;
        color: #aaa;
    }

    .comment-form textarea {
        border-radius: 20px;
        padding: 12px 15px;
        resize: none;
        background-color: #2a2a2a;
        border: 1px solid #444;
        transition: all 0.2s;
    }

    .comment-form textarea:focus {
        border-color: #666;
        box-shadow: none;
        background-color: #2a2a2a;
    }

    .comment-submit {
        border-radius: 20px;
        padding: 6px 20px;
        background-color: #444;
        border: none;
        transition: all 0.3s;
    }

    .comment-submit:hover {
        background-color: #555;
    }

    .comment {
        margin-top: 20px;
        background-color: transparent;
        border-bottom: 1px solid rgba(255, 255, 255, 0.05);
        padding-bottom: 15px;
    }

    .comment-body {
        display: flex;
        gap: 15px;
    }

    .comment-avatar {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background-color: #555;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        flex-shrink: 0;
    }

    .comment-content {
        flex-grow: 1;
    }

    .comment-header {
        display: flex;
        align-items: baseline;
        gap: 10px;
        margin-bottom: 5px;
    }

    .comment-user {
        font-weight: 600;
        color: #eee;
    }

    .comment-text {
        color: #ddd;
        font-size: 15px;
        line-height: 1.4;
        margin-bottom: 8px;
    }

    .comment-actions {
        display: flex;
        gap: 20px;
        margin-top: 5px;
    }

    .comment-action {
        font-size: 13px;
        color: #999;
        display: flex;
        align-items: center;
        gap: 5px;
        cursor: pointer;
        transition: all 0.2s;
    }

    .comment-action:hover {
        color: #fff;
    }

    .comment-action.liked {
        color: #ff6b6b;
    }

    .comment-action i {
        font-size: 14px;
    }
</style>
{{end}}


{{define "content"}}
<div class="container">
    <div class="col d-flex flex-column justify-items-center w-75 mx-auto">
        <div class="mt-3"></div>

        {{$block := index .Data "block"}}
        {{$user := index .Data "user"}}
        {{$csrf := .CSRFToken}}
        <div class="card mt-3 bg-dark text-white">
            <div class="card-header d-flex" style="gap: 10px;">
                <label for="">{{$block.User.Name}} <span class="post-time">{{humanTime $block.CreatedAt}}</span></label>
            </div>
            <div class="card-body">
                <p class="card-text">{{$block.Content}}</p>
            </div>
            <div class="card-footer">
                {{if $block.LikeByCurrentUser}}
                    <form action="/remove-like/{{$block.ID}}/{{$user.ID}}" method="post">
                        <input type="hidden" name="csrf_token" value="{{$csrf}}">
                        <button class="like-button" type="submit">
                            <i class="fa-solid fa-heart"></i>
                            <span>Like</span>
                        </button>
                    </form>
                {{else}}
                    <form action="/insert-like/{{$block.ID}}/{{$user.ID}}" method="post">
                        <input type="hidden" name="csrf_token" value="{{$csrf}}">
                        <button class="like-button" type="submit">
                            <i class="fa-regular fa-heart"></i>
                            <span>Like</span>
                        </button>
                    </form>
                {{end}}
                <span class="likes-count" id="likes-count-1">{{$block.LikeCount}} likes</span>
            </div>

            <!-- Comment section -->
            <div class="comments-section">
                <div class="comments-header">
                    <h6 class="m-0">Comments</h6>
                    <span class="comments-count">{{$block.CommentCount}} comments</span>
                </div>

                <!-- Comment form -->
                <div class="comment-form">
                    <div class="d-flex gap-3">
                        <div class="comment-avatar">
                            <span>{{firstChar $user.Name}}</span>
                        </div>
                        <div class="flex-grow-1">
                            <form action="/insert-comment/{{$block.ID}}" method="post">
                                <input type="hidden" name="csrf_token" value="{{$csrf}}">
                                <textarea class="form-control bg-dark text-white" name="comment" rows="2"
                                    placeholder="Write a comment..." required></textarea>
                                <div class="d-flex justify-content-end mt-2">
                                    <button type="submit" class="btn comment-submit">Post</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

                {{$comments := index .Data "comments"}}
                {{range $comments}}
                    <div class="comments-list">
                        <div class="comment">
                            <div class="comment-body">
                                <div class="comment-avatar">
                                    <span>{{firstChar .User.Name}}</span>
                                </div>
                                <div class="comment-content">
                                    <div class="comment-header">
                                        <span class="comment-user">{{.User.Name}}</span>
                                        <span class="post-time">{{humanTime .CreatedAt}}</span>
                                    </div>
                                    <p class="comment-text">{{.Content}}</p>
                                    {{if .LikeByCurrentUser}}
                                        <form action="/remove-comment-like/{{.ID}}/{{$user.ID}}" method="post">
                                            <input type="hidden" name="csrf_token" value="{{$csrf}}">
                                            <button class="like-button" type="submit">
                                                <i class="fa-solid fa-heart"></i>
                                                <span>{{.LikeCount}} Likes</span>
                                            </button>
                                        </form>
                                    {{else}}
                                        <form action="/insert-comment-like/{{.ID}}/{{$user.ID}}" method="post">
                                            <input type="hidden" name="csrf_token" value="{{$csrf}}">
                                            <button class="like-button" type="submit">
                                                <i class="fa-regular fa-heart"></i>
                                                <span>{{.LikeCount}} Likes</span>
                                            </button>
                                        </form>
                                    {{end}}
                                </div>
                            </div>
                        </div>
                    </div>
                {{end}}
            </div>
        </div>

        <div class="mt-3"></div>
    </div>
</div>
{{end}}

